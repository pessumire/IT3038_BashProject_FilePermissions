#!/bin/bash

# File containing users and permissions
file="random_users_permissions.txt"

# Function to update permissions for a user
update_permissions() {
    local user=$1
    local current_permissions=$2

    # Display current permissions
    echo "Current permissions for $user: $current_permissions"

    # Prompt user for new permissions
    read -p "Enter new permissions for $user (e.g., rwxr-xr-x): " new_permissions

    # Display the updated permissions
    echo "Updated permissions for $user: $new_permissions"
    echo
}

# Read through the file line by line
while read -r line; do
    # Split the line into user and permissions using parameter expansion
    user="${line%%:*}"
    permissions="${line#*: }"

    # Update permissions for the user
    update_permissions "$user" "$permissions"

done < "$file"
